<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>S-Expression Parser Test Fixtures</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            line-height: 1.6;
        }
        .test-case {
            border: 1px solid #ddd;
            border-radius: 8px;
            margin-bottom: 30px;
            padding: 20px;
            background: #fafafa;
        }
        .test-case h2 {
            margin-top: 0;
            color: #333;
            border-bottom: 2px solid #007acc;
            padding-bottom: 10px;
        }
        .file-sections-container {
            display: flex;
            gap: 20px;
            margin: 15px 0;
        }
        .file-section {
            flex: 1;
        }
        .file-section h3 {
            margin: 0 0 10px 0;
            font-size: 16px;
            color: #666;
        }
        .file-content {
            background: white;
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 15px;
            font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
            font-size: 14px;
            overflow-x: auto;
            white-space: pre-wrap;
        }
        .json-content {
            background: #f8f9fa;
        }
        .sexp-content {
            background: #f0f8ff;
        }
        
        .test-case.error-case {
            background: #fff5f5;
            border-color: #feb2b2;
        }
        
        .test-case.error-case h2 {
            color: #e53e3e;
            border-bottom-color: #e53e3e;
        }
        
        .error-case .json-content {
            background: #fed7d7;
            border-color: #feb2b2;
        }
        
        .summary {
            background: #e3f2fd;
            border-left: 4px solid #2196f3;
            padding: 15px;
            margin-bottom: 20px;
        }
        
        .toc {
            background: white;
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 15px;
            margin-bottom: 20px;
        }
        
        .toc ul {
            margin: 0;
            padding-left: 20px;
        }
        
        .toc a {
            text-decoration: none;
            color: #007acc;
        }
        
        .toc a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <h1>S-Expression Parser Test Fixtures</h1>
    
    <div class="summary">
        <strong>Total test cases:</strong> {{ total_cases }}
    </div>
    
    <div class="toc">
        <h3>Test Cases</h3>
        <ul>
        {% for case_name, case_data in test_cases.items() | sort %}
            <li>
                <a href="#{{ case_name }}">{{ case_name }}</a>
            </li>
        {% endfor %}
        </ul>
    </div>

    {% for case_name, case_data in test_cases.items() | sort %}
    {% set is_error_case = case_data.get("output.error") %}
    <div class="test-case{% if is_error_case %} error-case{% endif %}" id="{{ case_name }}">
        <h2>{{ case_name }}{% if is_error_case %} (Error){% endif %}</h2>
        
        <div class="file-sections-container">
            {% if case_data.get("input.sexp") %}
            <div class="file-section input-section">
                <h3>Input</h3>
                <div class="file-content sexp-content">{{ case_data["input.sexp"].content }}</div>
            </div>
            {% endif %}
            
            {% if case_data.get("output.json") %}
            <div class="file-section output-section">
                <h3>Expected Output</h3>
                <div class="file-content json-content">{{ case_data["output.json"].content }}</div>
            </div>
            {% elif case_data.get("output.error") %}
            <div class="file-section output-section">
                <h3>Expected Error</h3>
                <div class="file-content json-content">{{ case_data["output.error"].content }}</div>
            </div>
            {% endif %}
        </div>
    </div>
    {% endfor %}
</body>
</html>